@model Kontructo.Models.ProductType

@{
    ViewData["Title"] = "Create Tag";
}
<h3>Add Tag</h3>
<form method="post" action="CreateTag">
    <div class="form-group">
        <div class="col-12">
            <label asp-for="Tag"></label>
            <input asp-for="Tag" class="form-control" />
            <br />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Create" />
            <a asp-action="TagList" class="btn btn-primary">Back</a>
        </div>
    </div>
</form>
