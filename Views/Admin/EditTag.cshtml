@model Kontructo.Models.ProductType

@{
    ViewData["Title"] = "Edit Tag";
}
<h3>Edit Tag</h3>
<form method="post" action="EditTag">
    <div class="form-group">
        <div class="col-12">
            <label asp-for="Tag"></label>
            <br />
            <input asp-for="Tag" class="form-control" />
            <br />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="TagList" class="btn btn-primary">Back</a>
        </div>
    </div>
</form>